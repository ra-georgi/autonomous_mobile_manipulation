<root main_tree_to_execute="MainTree" BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- 1) Get the next object from your spawner -->
      <GetNextObject target_name="{obj_name}" target_pose="{obj_pose}" />

      <!-- 2) Compute navigation goal from object pose -->
      <ComputeBaseGoalFromObject object_pose="{obj_pose}" nav_goal="{nav_goal}" />

      <!-- 3) Later: use NavigateToPose with nav_goal -->
      <!--
      <NavigateToPose goal="{nav_goal}"
                      server_name="navigate_to_pose" />
      -->
    </Sequence>
  </BehaviorTree>
</root>
